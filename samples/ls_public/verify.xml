<page parent="_site.xml">
<chunk id="message"></chunk>
<chunk id="main">
<form method="POST">
<div id="login">
  <table class="detail">
	 <if key="error">
		<tr class="error">
		  <th></th>
		  <td>{error}</td>
		</tr>
	 </if>
	 <tr>
		<th>Verification Code</th>
		<td><input type="text" name="code" size="8"/> <input type="submit" name="_send" value="Send me a Verification Code"/></td>
	 </tr>
	 <tr>
		<th></th>
		<td><input type="submit" name="_verify" value="Verify Account"/></td>
	 </tr>
  </table>
</div>
</form>
</chunk>
</page>
