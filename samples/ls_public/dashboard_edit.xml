<page parent="_site.xml">
<chunk id="main">
<div id="main">
<div id="login">
<with key="_record">
  <dl>
	 <dt>Edit your Profile</dt>
	 <dd>
		<form method="POST" enctype="multipart/form-data">
		  <if key="_error"><div class="error">{_error}</div></if>
		  <div><input type="text" name="title" size="25" placeholder="title (optional)"/></div>
		  <div><input type="text" name="organization" size="25" placeholder="organization (optional)"/></div>
		  <div><input type="text" name="website" size="25" placeholder="website (optional)"/></div>
		  <!--<div>Upload Photo (optional) <input type="file" name="photo" /></div>-->
		  
		  <div><textarea name="biography" rows="6" cols="25" placeholder="brief bio (optional)"/></div>
		  <div><input type="password" name="password_1" size="25" placeholder="Change Password (optional)"/></div>
		  <div><input type="password" name="password_2" size="25" placeholder="Change Password (again)"/></div>
		  <div><input type="submit" name="_update_profile" value="UPDATE YOUR PROFILE"/></div>
		</form>
	 </dd>
  </dl>
  <div style="clear:both"/>
</with>
</div>
</div>
</chunk>
</page>
