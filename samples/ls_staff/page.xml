<page parent="_site.xml">
<chunk id="main">
<form method="POST" enctype="multipart/form-data">
  <with key="_record">
	 <table class="detail">
		<tr>
		  <th>Path</th><td>{path}</td>
		</tr>
		<tr><th>Title</th><td>{title}</td></tr>
		<tr><th>Body</th><td><textarea name="body" rows="20" cols="100"/></td></tr>
	 </table>

	 <div class="actions">
		<input type="submit" name="_update" value="Update"/>
	 </div>	 	 
  </with>
</form></chunk>
</page>